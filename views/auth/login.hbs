<div class='row'>
  <div class='col s12'>
    <ul class='tabs'>
      <li class='tab col s6'><a class='active' href='#login'>Log In</a></li>
      <li class='tab col s6'><a href='#register'>Sign In</a></li>
    </ul>
  </div>
  <div id='login' class='col offset-s3 s6'>
    <h4>Log In Notebook Store</h4>
    {{#if loginError}}
      <p class='alert'>{{loginError}}</p>
    {{/if}}
    <form action='/auth/login' method='post' class='f_control'>
      <div class='input-field'>
        <input id='email' name='email' type='email' class='validate' required />
        <label for='email'>Your email</label>
        <span class='helper-text' data-error='Enter valid email'></span>
      </div>

      <div class='input-field'>
        <input
          id='password'
          name='password'
          type='password'
          class='validate'
          required
        />
        <label for='password'>Enter Password</label>
        <span class='helper-text' data-error='Enter valid password'></span>
      </div>

      <button type='submit' class='btn'>Log In</button>
    </form>
  </div>
  <div id='register' class='col offset-s3 s6'>
    {{#if regError}}
      <p class='alert'>{{regError}}</p>
    {{/if}}
    <h4>Create account</h4>
    <form action='/auth/register' method='post' class='f_control' novalidate>
      <div class='input-field'>
        <input
          id='reg-email'
          name='email'
          type='email'
          class='validate'
          required
        />
        <label for='reg-email'>Your email</label>
        <span class='helper-text' data-error='Enter valid email'></span>
      </div>
      <div class='input-field'>
        <input
          id='reg-name'
          name='name'
          type='text'
          class='validate'
          required
        />
        <label for='reg-name'>Your name</label>
        <span class='helper-text' data-error='Enter valid name'></span>
      </div>

      <div class='input-field'>
        <input
          id='reg-password'
          name='password'
          type='password'
          class='validate'
          required
        />
        <label for='reg-password'>Enter Password</label>
        <span class='helper-text' data-error='Enter valid password'></span>
      </div>

      <div class='input-field'>
        <input
          id='reg-confirm-password'
          name='confirm'
          type='password'
          class='validate'
          required
        />
        <label for='reg-confirm-password'>Enter Password Again</label>
        <span class='helper-text' data-error='Enter valid password'></span>
      </div>

      <button type='submit' class='btn'>Sign In</button>
    </form>
  </div>
</div>