{{#if notebooks.length}}
  <div class='content_notebook'>
    {{#each notebooks}}
      <div class='row'>
        <div class='col'>
          <div class='card'>
            <div class='card-image'>
              <img src='{{img}}' alt='{{title}}' />
            </div>
            <div class='card-content'>
              <span class='card-title'>{{title}}</span>
              <p>{{description}}</p>
              <b class='price'>{{price}}</b>
            </div>
            <div class='card-action actions'>
              <a href='/notebooks/{{id}}' target='_blank'>Notebook Details</a>
              {{!  root.isAuth global miqyosdagi o'zgaruvchini olish u-n ishlatiladi, oddiy holatda iteratsiya bo'layotgani uchun notebooks ni ichidagi qiymatlarndan oladi  }}
              {{#if @root.isAuth}}
                {{! Bu nesting bo'layotgani u-n alohida f-ya sifatida yozildi }}
                {{#ifeq userId._id @root.userId}}
                  <a href='/notebooks/{{id}}/edit?allow=true'>Edit</a>
                {{/ifeq}}
                <form action='/card/add' method='post'>
                  <input type='hidden' name='id' value='{{id}}' />
                  <button class='btn btn-primary'>Buy</button>
                </form>
              {{/if}}
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{else}}
  <div class='container-fluid mt-100'>
    <div class='row'>
      <div class='col-md-12'>
        <div class='card'>
          <div class='card-header'>
            <h5>Cart</h5>
          </div>
          <div class='card-body cart'>
            <div class='col-sm-12 empty-cart-cls text-center'>
              <img
                src='https://i.imgur.com/dCdflKN.png'
                width='130'
                height='130'
                class='img-fluid mb-4 mr-3'
              />
              <h3><strong>Notebooks Empty</strong></h3>
              <a
                href='/add'
                class='btn btn-primary cart-btn-transform m-3'
                data-abc='true'
              >Add new notebook</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{{/if}}